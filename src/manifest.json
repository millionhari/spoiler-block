{
  "manifest_version": 2,

  "name": "Spoiler Block",
  "description": "This extension will black out divs based on specific keywords",
  "version": "1.0",
  "permissions": ["storage"],
  "options_page": "/options/spoiler_block_options.html",
  "background": {
    "scripts": ["/backgroundpage/background.js"]
  },
  "content_scripts": [
     {
       "matches": ["https://*/*", "http://*/*"],
       "css": ["/styles/style.css"],
       "js": ["/scripts/app.js"]
     }
   ]
}
